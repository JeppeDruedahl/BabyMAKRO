\end_inset


\emph default

\begin_inset Formula 
\begin{align}
X_{t} & =\gamma^{X}X_{t-1}+(1-\gamma^{X})\chi_{t}\left(\frac{P_{t}^{X}}{P_{t}^{F}}\right)^{-\sigma^{F}}\label{eq:X}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection
Block VIII.
 Capital agency
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-VIII.-Capital"

\end_inset


\end_layout

\begin_layout Standard
The capital agency firm buys investment goods, 
\begin_inset Formula $I_{t}$
\end_inset

, at price, 
\begin_inset Formula $P_{t}^{I}$
\end_inset

, to accumulate capital, 
\begin_inset Formula $K_{t}$
\end_inset

, which it rents out to production at the rental rate 
\begin_inset Formula $r_{t+1}^{K}$
\end_inset

 in the following period.
 The investment decision is subject to convex adjustment costs in terms
 of wasted investment goods, such that effective investment is 
\begin_inset Formula $\iota_{t}$
\end_inset

.
 Future profits are discounted with 
\begin_inset Formula $r^{\text{firm}}.$
\end_inset

 The capital agency takes prices as given, and its problem thus is:
\begin_inset Formula 
\begin{align*}
V_{0} & \left(K_{t-1}\right)=\max_{\left\{ K_{t}\right\} }\sum_{t=0}^{\infty}\left(1+r^{\text{firm}}\right)^{-t}\left[r_{t}^{K}K_{t-1}-P_{t}^{I}\left(\iota_{t}+\Psi(\iota_{t},K_{t-1})\right)\right]\\
 & \text{s.t.}\\
I_{t} & =\iota_{t}+\Psi(\iota_{t},K_{t-1})\\
K_{t} & =(1-\delta^{K})K_{t-1}+\iota_{t}.
\end{align*}

\end_inset

We choose
\begin_inset Formula 
\begin{align*}
\Psi(\iota_{t},K_{t-1}) & =\frac{\Psi_{0}}{2}\left(\frac{\iota_{t}}{K_{t-1}}-\delta^{K}\right)^{2}K_{t-1}\\
\Psi_{\iota}(\iota_{t},K_{t-1}) & =\Psi_{0}\left(\frac{\iota_{t}}{K_{t-1}}-\delta^{K}\right)\\
\Psi_{K}(\iota_{t},K_{t-1}) & =\frac{\Psi_{0}}{2}\left(\frac{\iota_{t}}{K_{t-1}}-\delta^{K}\right)^{2}-\Psi_{0}\left(\frac{\iota_{t}}{K_{t-1}}-\delta^{K}\right)\frac{\iota_{t}}{K_{t-1}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We write the 
\series bold
block
\series default
 as
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\series default

\begin_inset Formula $\left\{ r_{t}^{K}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ P_{t}^{I}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ K_{t}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs:
\series default
 
\begin_inset Formula $\{\iota_{t}\},\{I_{t}\}$
\end_inset


\begin_inset Formula 
\begin{align}
\iota_{t} & =K_{t}-\left(1-\delta^{K}\right)K_{t-1}\label{eq:iota}\\
I_{t} & =\iota_{t}+\Psi(\iota_{t},K_{t-1})\label{eq:I}
\end{align}

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
We have:
\begin_inset Formula 
\[
V_{0}\left(K_{t-1}\right)=\max_{\left\{ K_{t}\right\} }\sum_{t=0}^{\infty}\left(1+r^{\text{firm}}\right)^{-t}\left[r_{t}^{K}K_{t-1}-P_{t}^{I}\left(\iota_{t}+\Psi\left(\iota_{t},K_{t-1}\right)\right)\right]
\]

\end_inset


\end_layout

\begin_layout Plain Layout
Note:
\begin_inset Formula 
\begin{align*}
\frac{\partial\iota_{t}}{\partial K_{t}} & =\frac{\partial\left(K_{t}-(1-\delta^{K})K_{t-1}\right)}{\partial K_{t}}=1\\
\frac{\partial\iota_{t+1}}{\partial K_{t}} & =\frac{\partial\left(K_{t+1}-(1-\delta^{K})K_{t}\right)}{\partial K_{t}}=-(1-\delta^{K})
\end{align*}

\end_inset

The FOC is:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
0= & -P_{t}^{I}\left(1+\Psi_{\iota}\left(\iota_{t},K_{t-1}\right)\right)\\
 & +\left(1+r^{\text{firm}}\right)^{-1}\left[r_{t+1}^{K}+P_{t+1}^{I}\left(1-\delta^{K}\right)\left(1+\Psi_{\iota}\left(\iota_{t+1},K_{t}\right)\right)-P_{t+1}^{I}\Psi_{K}\left(\iota_{t+1},K_{t}\right)\right]
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout
ss is:
\end_layout

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
P_{ss}^{I}\left(1+\Psi_{\iota}\left(\iota_{ss},K_{ss}\right)\right) & =\left(1+r^{\text{firm}}\right)^{-1}\left[r_{ss}^{k}+P_{ss}^{I}(1-\delta^{K})(1+\Psi_{\iota}(\iota_{ss},K_{ss}))-P_{ss}^{I}\Psi_{K}\left(\iota_{ss},K_{ss}\right)\right]\\
r_{ss}^{k} & =\left(1+r^{\text{firm}}\right)P_{ss}^{I}-P_{ss}^{I}(1-\delta^{K})=\left(r^{\text{firm}}+\delta^{K}\right)P_{ss}^{I}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Targets:
\series default

\begin_inset Formula 
\begin{align}
0= & -P_{t}^{I}\left(1+\Psi_{\iota}\left(\iota_{t},K_{t-1}\right)\right)\label{eq:FOC_K}\\
 & +\left(1+r^{\text{firm}}\right)^{-1}\left[r_{t+1}^{k}+P_{t+1}^{I}(1-\delta^{K})(1+\Psi_{\iota}(\iota_{t+1},K_{t}))-P_{t+1}^{I}\Psi_{K}\left(\iota_{t+1},K_{t}\right)\right]\nonumber 
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The variable 
\begin_inset Formula $K_{-1}$
\end_inset

 is pre-determined.
\end_layout

\begin_layout Subsection
Block IX.
 Government
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-IX.-Government"

\end_inset


\end_layout

\begin_layout Standard
The government budget is given by
\begin_inset Formula 
\begin{equation}
B_{t}=(1+r^{B})B_{t-1}+P_{t}^{G}G_{t}+(1-\tau_{t})W_{U}W_{ss}U_{t}+(1-\tau_{t})W_{R}W_{ss}(N_{t}-N_{t}^{work})-\tau_{t}W_{t}L_{t}\label{eq:government_budget}
\end{equation}

\end_inset

where 
\begin_inset Formula $r^{B}$
\end_inset

 is the interest rate on government debt determined in the foreign economy.
 We assume the government has the exogenous tax rate 
\begin_inset Formula $\tau_{ss}$
\end_inset

 for 
\begin_inset Formula $t_{B}$
\end_inset

 years and then begins to adjust taxes to get back to steady state debt.
 For 
\begin_inset Formula $\Delta_{B}$
\end_inset

 years this is done gradually, and thereafter it is done fully.
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\series default

\begin_inset Formula $\left\{ P_{t}^{G}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ G_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ W_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ L_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ N_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ N_{t}^{work}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs:
\series default
 
\begin_inset Formula $\{\tau_{t}\}$
\end_inset

, 
\begin_inset Formula $\left\{ \tilde{\tau}_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ B_{t}\right\} $
\end_inset

,
\begin_inset Formula $\left\{ \tilde{B}_{t}\right\} $
\end_inset


\begin_inset Formula 
\begin{align}
\tilde{B}_{t} & =(1+r^{B})B_{t-1}+P_{t}^{G}G_{t}+(1-\tau_{ss})W_{U}W_{ss}U_{t}+(1-\tau_{ss})W_{R}W_{ss}(N_{t}-N_{t}^{work})-\tau_{ss}W_{t}L_{t}\nonumber \\
\tilde{\tau}_{t} & =\tau_{ss}+\varepsilon_{B}\frac{\tilde{B}_{t}-B_{ss}}{W_{t}L_{t}+W_{U}W_{ss}U_{t}+W_{R}W_{ss}(N_{t}-N_{t}^{work})}\nonumber \\
\tau_{t} & =\begin{cases}
\tau_{ss} & \text{if }t<t_{B}\\
(1-\omega_{t})\tau_{ss}+\omega_{t}\tilde{\tau}_{t} & \text{if }t\in[t_{B,}t_{B}+\Delta_{B}]\\
\tilde{\tau}_{t} & \text{if }t>t_{B}+\Delta_{B}
\end{cases}\label{eq:tau}\\
\omega_{t} & =3\left(\frac{t-t_{B}}{\Delta_{B}}\right)^{2}-2\left(\frac{t-t_{B}}{\Delta_{B}}\right)^{3}\in(0,1)\nonumber \\
B_{t} & =(1+r^{B})B_{t-1}+P_{t}^{G}G_{t}+(1-\tau_{t})W_{U}W_{ss}U_{t}+(1-\tau_{t})W_{R}W_{ss}(N_{t}-N_{t}^{work})-\tau_{t}W_{t}L_{t}\label{eq:B}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The variable 
\begin_inset Formula $B_{-1}$
\end_inset

 is pre-determined.
\end_layout

\begin_layout Subsection
Block X.
 Households - consumption -saving
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-X.-Households"

\end_inset


\end_layout

\begin_layout Standard
The model has two types of households.
 A share of 
\begin_inset Formula $\lambda$
\end_inset

 of households is hands-to-mouth and a share of 
\begin_inset Formula $1-\lambda$
\end_inset

 households is unconstrained (Ricardian).
 All households have four sources of income:
\end_layout

\begin_layout Enumerate
Post-tax labor income, 
\begin_inset Formula $\left(1-\tau_{t}\right)W_{t}\frac{L_{a,t}}{N_{a}}$
\end_inset


\end_layout

\begin_layout Enumerate
Post-tax unemployment benefits, 
\begin_inset Formula $\left(1-\tau_{t}\right)W^{U}W_{ss}\frac{U_{a,t}}{N_{a}}$
\end_inset


\end_layout

\begin_layout Enumerate
Post-tax retirement benefits, 
\begin_inset Formula $\left(1-\tau_{t}\right)W^{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }$
\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
Man kunne ogsÃ¥ define antal pensionister som N_a-(L_a,t+U_a,t).
 Ved at dividere med N_a fÃ¥r man 1-(L_a,t+U_a,t)/N_a, hvilket kunne bruges
 i stedet for indikator funktionen.
\end_layout

\end_inset


\end_layout

\begin_layout Enumerate
Equally divided inheritance, 
\begin_inset Formula $\frac{A_{t}^{q}}{N}$
\end_inset


\end_layout

\begin_layout Standard
The age specific income is
\begin_inset Formula 
\[
\text{inc}_{a,t}=\left(1-\tau_{t}\right)W_{t}\frac{L_{a,t}}{N_{a}}+\left(1-\tau_{t}\right)W^{U}W_{ss}\frac{U_{a,t}}{N_{a}}+\left(1-\tau_{t}\right)W^{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }+\frac{A_{t}^{q}}{N}
\]

\end_inset


\end_layout

\begin_layout Standard
The price of consumption goods is 
\begin_inset Formula $P_{t}^{C}$
\end_inset

.
\end_layout

\begin_layout Standard
Consumption is 
\begin_inset Formula $C_{a,t}^{\bullet}$
\end_inset

 and end-of-period nominal savings is 
\begin_inset Formula $A_{a,t}^{\bullet}$
\end_inset

, where 
\begin_inset Formula $\bullet\in\{\text{HtM},R\}$
\end_inset

.
 The behavior of 
\emph on
surviving 
\emph default
hands-to-mouth households are
\begin_inset Formula 
\begin{align*}
C_{a,t}^{\text{HtM}} & =\frac{\text{inc}_{a,t}}{P_{t}^{C}}\\
A_{a,t}^{\text{HtM}} & 0.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The Ricardian households making their first decision in period 
\begin_inset Formula $t_{0}$
\end_inset

 solve the problem
\begin_inset Formula 
\begin{align*}
V_{t_{0}} & =\max_{\left\{ C_{a,t}^{R},A_{a,t}^{R}\right\} _{a=0}^{\#-1}}\sum_{a=0}^{\#-1}\left(\Pi_{j=0}^{a-1}\beta(1-\zeta_{j})\right)\left[\frac{\left(C_{a,t}^{R}\right)^{1-\sigma}}{1-\sigma}+\zeta_{a}\mu^{A^{q}}\frac{\left(\frac{A_{a,t}^{R}}{P_{t}^{C}}\right)^{1-\sigma}}{1-\sigma}\right]\\
 & \text{s.t.}\\
t & =t_{0}+a\\
A_{-1,t}^{R} & =0\\
A_{a,t}^{R} & =(1+r^{hh})A_{a-1,t-1}^{R}+\text{inc}_{a,t}-P_{t}^{C}C_{a,t}^{R}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Aggregation implies
\begin_inset Formula 
\begin{align*}
C_{a,t} & =\lambda C_{a,t}^{\text{HtM}}+(1-\lambda)C_{a,t}^{R}\\
A_{a,t} & =\lambda A_{a,t}^{\text{HtM}}+(1-\lambda)A_{a,t}^{R}
\end{align*}

\end_inset

and
\begin_inset Formula 
\begin{align*}
C_{t} & =\sum_{a=0}^{\#-1}N_{a}C_{a,t}\\
A_{t} & =\sum_{a=0}^{\#-1}N_{a}C_{a,t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Bequests are
\begin_inset Formula 
\[
A_{t}^{q}=\left(1+r^{hh}\right)\sum_{a=0}^{\#-1}\zeta_{a}N_{a}A_{a,t-1}
\]

\end_inset


\end_layout

\begin_layout Standard
Using the FOC for we can write the 
\series bold
block
\series default
 as:
\end_layout

\begin_layout Enumerate

\series bold
Inputs: 
\series default

\begin_inset Formula $\left\{ L_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ U_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\{P_{t}^{C}\}$
\end_inset

, 
\begin_inset Formula $\left\{ W_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \tau_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ A_{t}^{q}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ A_{\#-1,t}^{R}\right\} $
\end_inset


\end_layout

\begin_layout Enumerate

\series bold
Outputs: 
\series default

\begin_inset Formula $\left\{ A_{a,t}^{\text{HtM}}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ A_{a,t}^{R}\right\} $
\end_inset

,
\begin_inset Formula $\left\{ A_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ A_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ C_{a,t}^{\text{HtM}}\right\} ,$
\end_inset


\begin_inset Formula $\left\{ C_{a,t}^{R}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ C_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ C_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \text{inc}_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \text{inc}_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \pi_{t}^{hh}\right\} $
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard
Calculate
\begin_inset Formula 
\begin{align}
\pi_{t}^{hh} & =\frac{P_{t}^{C}}{P_{t-1}^{C}}-1\label{eq:pi_hh-1}\\
\text{inc}_{a,t} & =\left(1-\tau_{t}\right)W_{t}\frac{L_{a,t}}{N_{a}}+\left(1-\tau_{t}\right)W^{U}W_{ss}\frac{U_{a,t}}{N_{a}}+\left(1-\tau_{t}\right)W^{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }+\frac{A_{t}^{q}}{N}\label{eq:inc}\\
C_{a,t}^{\text{HtM}} & =\frac{\text{inc}_{a,t}}{P_{t}^{C}}\label{eq:C_HtM}\\
A_{a,t}^{\text{HtM}} & =0\label{eq:A_HtM}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
For each birthcohort 
\begin_inset Formula $t_{0}\in\{-\#+1,-\#+2,\dots,T-1\}$
\end_inset

 iterate backwards from 
\begin_inset Formula $a=\#-1$
\end_inset

 with 
\begin_inset Formula $t=t_{0}+a$
\end_inset

, but skipping steps where 
\begin_inset Formula $t<0$
\end_inset

 or 
\begin_inset Formula $t>T-1$
\end_inset

:
\begin_inset Formula 
\begin{align*}
C_{a,t}^{R} & =\begin{cases}
\left(\zeta_{a}\mu^{A^{q}}\left(\frac{A_{t}^{\text{death}}}{P_{t}^{C}}\right)^{-\sigma}\right)^{-\frac{1}{\sigma}} & \text{if }a=\#-1\\
\left(\beta(1-\zeta_{a})\frac{1+r^{hh}}{1+\pi_{ss}^{hh}}\left(C_{a+1,ss}^{R,}\right)^{-\sigma}+\zeta_{a}\mu^{A^{q}}\left(\frac{A_{a,ss}^{R}}{P_{t}^{C}}\right)^{-\sigma}\right)^{-\frac{1}{\sigma}} & \text{elif }t=T-1\\
\left(\beta(1-\zeta_{a})\frac{1+r^{hh}}{1+\pi_{t+1}^{hh}}\left(C_{a+1,t+1}^{R,}\right)^{-\sigma}+\zeta_{a}\mu^{A^{q}}\left(\frac{A_{a,t}^{R}}{P_{t}^{C}}\right)^{-\sigma}\right)^{-\frac{1}{\sigma}} & \text{else}
\end{cases}\\
A_{a-1,t-1}^{R} & =\frac{A_{a,t}^{R}-\text{inc}_{a,t}+P_{t}^{C}C_{a,t}^{R}}{1+r^{hh}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Aggregates
\begin_inset Formula 
\begin{align}
C_{a,t} & =\lambda C_{a,t}^{\text{HtM}}+(1-\lambda)C_{a,t}^{R}\label{eq:C_a}\\
A_{a,t} & =\lambda A_{a,t}^{\text{HtM}}+(1-\lambda)A_{a,t}^{R}\label{eq:A_a}\\
\text{inc}_{t} & =\sum_{a=0}^{\#-1}N_{a}\text{inc}_{a,t}\label{eq:C}\\
C_{t} & =\sum_{a=0}^{\#-1}N_{a}C_{a,t}\\
A_{t} & =\sum_{a=0}^{\#-1}N_{a}C_{a,t}\label{eq:A}
\end{align}

\end_inset


\series bold
Targets
\series default

\begin_inset Formula 
\begin{align}
0 & =A_{t}^{q}-\left(1+r^{hh}\right)\sum_{a=0}^{\#-1}\zeta_{a}N_{a}A_{a,t-1}\label{eq:A_q}\\
0 & =\sum_{t_{0}=-\#+1}^{-1}\left(A_{-t_{0}-1,-1}^{R}-A_{-t_{0}-1,ss}\right)+\sum_{t_{0}=0}^{T-1-\#+1}\left(A_{-1,t_{0}}^{R}-0.0\right)\label{eq:Wealth of Households}
\end{align}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
For 
\begin_inset Formula $t=0$
\end_inset

, we have that the variable 
\begin_inset Formula $A_{a,t-1}^{R}$
\end_inset

 is pre-determined.
\end_layout

