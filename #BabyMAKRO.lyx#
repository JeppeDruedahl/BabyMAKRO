\end_layout

\begin_layout Standard
The repacking firms were described in sub-section 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:Block-VI.-Repacking"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
 Using additional results from sub-section 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:On-CES-technology"
plural "false"
caps "false"
noprefix "false"

\end_inset

 on CES technology with 
\begin_inset Formula $\Gamma=1$
\end_inset

, we write the 
\series bold
block
\series default
 as:
\end_layout

\begin_layout Enumerate

\series bold
Inputs:
\series default
 
\begin_inset Formula $\left\{ P_{t}^{Y}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ P_{t}^{M,\bullet}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ P_{t}^{\bullet}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \bullet_{t}\right\} $
\end_inset

 for 
\begin_inset Formula $\bullet\in\{C,G,I,X\}$
\end_inset


\end_layout

\begin_layout Enumerate

\series bold
Output:
\series default
 
\begin_inset Formula $\left\{ \bullet_{t}^{M}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \bullet_{t}^{Y}\right\} $
\end_inset

 for 
\begin_inset Formula $\bullet\in\{C,G,I,X\}$
\end_inset


\begin_inset Formula 
\begin{align}
\bullet_{t}^{M} & =\mu^{M,\bullet}\left(\frac{P_{t}^{\bullet}}{P_{t}^{M,\bullet}}\right)^{\sigma^{\bullet}}\bullet_{t}\label{eq:CGIX_M}\\
\bullet_{t}^{Y} & =\left(1-\mu^{M,\bullet}\right)\left(\frac{P_{t}^{\bullet}}{P_{t}^{Y}}\right)^{\sigma^{\bullet}}\bullet_{t}.\label{eq:CGIX_Y}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection
Block XII.
 Goods market clearing
\begin_inset CommandInset label
