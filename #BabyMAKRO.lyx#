\begin_layout Standard
The total number of unknowns thus is 
\begin_inset Formula $7\times T$
\end_inset

.
\end_layout

\begin_layout Subsection
Demographics
\begin_inset CommandInset label
LatexCommand label
name "subsec:Demographics"

\end_inset


\end_layout

\begin_layout Standard
The age-specific number of household is 
\begin_inset Formula $N_{a}$
\end_inset

, which we normalize to 1 at age 
\begin_inset Formula $a=0$
\end_inset

.
 The mortality rate at period 
\begin_inset Formula $a$
\end_inset

 is 
\begin_inset Formula $\zeta_{a}$
\end_inset

, the potential life-span is 
\begin_inset Formula $\#$
\end_inset

 and retirement age is 
\begin_inset Formula $\#_{work}<\#$
\end_inset

.
\end_layout

\begin_layout Standard
The demographic structure and population is then given by
\begin_inset Formula 
\begin{align*}
N_{a} & =\begin{cases}
1 & \text{if }a=0\\
(1-\zeta_{a-1})N_{a-1} & \text{if }a>0
\end{cases}\\
\zeta_{a} & =\begin{cases}
0 & \text{if }a<\#_{work}\\
\left(\frac{a+1-\#_{work}}{\#-\#_{work}}\right)^{\varsigma} & \text{if }a<\#-1\\
1 & \text{if }a=\#-1
\end{cases}\\
N & =\sum_{a=0}^{\#-1}N_{a}\\
N^{work} & =\sum_{a=0}^{\#_{\text{work}}-1}N_{a}
\end{align*}

\end_inset


\end_layout

\begin_layout Subsection
Block I.
 Households - search behavior and matching
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-I.-Households"

\end_inset


\end_layout

\begin_layout Standard
Households search for a job and supply labor exogenously.
 The age-specific job-separation probability is 
\begin_inset Formula $\delta_{a}^{L}\in(0,1)$
\end_inset

.
 All unemployed search for a job.
 As an initial condition, we have 
\begin_inset Formula $L_{-1,t-1}=0$
\end_inset

.
\end_layout

\begin_layout Standard
The quantity of searchers is
\begin_inset Formula 
\begin{align*}
S_{a,t} & =\begin{cases}
1 & \text{if }a=0\\
(1-\zeta_{a-1})\left[(N_{a-1}-L_{a-1,t-1})+\delta_{a}^{L}L_{a-1,t-1}\right] & \text{if }a<\#_{work}\\
0 & \text{if }a\geq\#_{work}
\end{cases}\\
S_{t} & =\sum_{a}S_{a,t}.
\end{align*}

\end_inset

The quantity of households with a job 
\emph on
before matching
\emph default
 is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\underline{L}_{a,t} & =\begin{cases}
0 & \text{if }a=0\\
(1-\zeta_{a-1})(1-\delta_{a}^{L})L_{a-1,t-1} & \text{if }a<\#_{work}\\
0 & \text{if }a\geq\#_{work}
\end{cases}\\
\underline{L}_{t} & =\sum_{a}\underline{L}_{a,t}.
\end{align*}

\end_inset

The aggregate job-separation rate incl.
 mortality is
\begin_inset Formula 
\[
\delta_{t}^{L}=\frac{L_{t-1}-\underline{L}_{t}}{L_{t-1}}.
\]

\end_inset

The quantity of vacancies is 
\begin_inset Formula $v_{t}$
\end_inset

 and the number of matches, 
\begin_inset Formula $\mathbb{\mathcal{M}}_{t}$
\end_inset

, is given by the 
\emph on
matching function
\emph default

\begin_inset Formula 
\[
\mathbb{\mathcal{M}}_{t}=\frac{S_{t}v_{t}}{\left(S_{t}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}},
\]

\end_inset

where 
\begin_inset Formula $\nu$
\end_inset

 is the efficiency of vacancies.
\end_layout

\begin_layout Standard
\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula $\mathbb{\mathcal{M}}_{t}=\frac{S_{t}v_{t}}{\left(S_{t}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}}\Leftrightarrow\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\left(S_{t}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}=v_{t}\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}=\left(\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\right)^{\frac{1}{\sigma^{m}}}\left(S_{t}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}\right)\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}-\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}^{\frac{1}{\sigma^{m}}}\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}=\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}=\frac{\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}}{1-(\frac{\nu\mathbb{\mathcal{M}}_{t}}{S_{t}})^{\frac{1}{\sigma^{m}}}}\Leftrightarrow v_{t}=\left(\frac{\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}}{1-(\frac{\nu\mathbb{\mathcal{M}}_{t}}{S_{t}})^{\frac{1}{\sigma^{m}}}}\right)^{\sigma^{m}}$
\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula $v_{t}^{\frac{1}{\sigma^{m}}}-\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}^{\frac{1}{\sigma^{m}}}\left(\nu v_{t}\right)^{\frac{1}{\sigma^{m}}}=\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}\Leftrightarrow\nu^{\frac{1}{\sigma^{m}}}=\frac{v_{t}^{\frac{1}{\sigma^{m}}}-\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}}{\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}^{\frac{1}{\sigma^{m}}}\left(v_{t}\right)^{\frac{1}{\sigma^{m}}}}\Leftrightarrow\nu=\frac{\left(v_{t}^{\frac{1}{\sigma^{m}}}-\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}}{\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}v_{t}}$
\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Formula $\mathbb{\mathcal{M}}_{ss}=\frac{S_{ss}v_{ss}}{\left(S_{ss}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{ss}\right)^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}}\Leftrightarrow\left(S_{ss}^{\frac{1}{\sigma^{m}}}+\left(\nu v_{ss}\right)^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}=\frac{S_{ss}v_{ss}}{\mathbb{\mathcal{M}}_{ss}}\Leftrightarrow\left(\nu v_{ss}\right)^{\frac{1}{\sigma^{m}}}=\left(\frac{S_{ss}v_{ss}}{\mathbb{\mathcal{M}}_{ss}}\right)^{\frac{1}{\sigma^{m}}}-S_{ss}^{\frac{1}{\sigma^{m}}}\Leftrightarrow\nu=\frac{\left(\left(\frac{S_{ss}v_{ss}}{\mathbb{\mathcal{M}}_{ss}}\right)^{\frac{1}{\sigma^{m}}}-S_{ss}^{\frac{1}{\sigma^{m}}}\Leftrightarrow\right)^{\sigma^{m}}}{v_{ss}}$
\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
The job-filling rate, 
\begin_inset Formula $m_{t}^{v}$
\end_inset

, and the job-finding rate, 
\begin_inset Formula $m_{t}^{s}$
\end_inset

, are thus
\begin_inset Formula 
\begin{align*}
m_{t}^{v} & =\frac{\mathbb{\mathcal{M}}_{t}}{v_{t}}\\
m_{t}^{s} & =\frac{\mathcal{M}_{t}}{S_{t}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The number of employed therefore is
\begin_inset Formula 
\begin{align*}
L_{a,t} & =\underline{L}_{a,t}+m_{t}^{s}S_{a,t}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
This implies that the number of unemployed is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
U_{a,t} & =\begin{cases}
N_{a}-L_{a,t} & \text{if }a<\#_{work}\\
0 & \text{if }a\geq\#_{\text{work}}
\end{cases}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
In equilibrium, the number of matches must equal the number of new hires,
 i.e.
\begin_inset Formula 
\[
\mathbb{\mathcal{M}}_{t}=L_{t}-\underline{L}_{t}.
\]

\end_inset

We write the 
\series bold
block
\series default
 in terms of inputs, and outputs as:
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\begin_inset Formula $\left\{ L_{t}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs: 
\begin_inset Formula $\left\{ S_{a,t}\right\} $
\end_inset


\series default
, 
\begin_inset Formula $\left\{ S_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \delta_{t}^{L}\right\} $
\end_inset

,
\series bold
 
\begin_inset Formula $\left\{ \mathbb{\mathcal{M}}_{t}\right\} ,$
\end_inset


\begin_inset Formula $\left\{ v_{t}\right\} $
\end_inset


\series default
, 
\begin_inset Formula $\left\{ m_{t}^{v}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ m_{t}^{s}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ L_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ U_{a,t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ U_{t}\right\} $
\end_inset


\end_layout

\begin_deeper
\begin_layout Standard

\series bold
\begin_inset Formula 
\begin{align}
S_{a,t} & =\begin{cases}
1 & \text{if }a=0\\
(1-\zeta_{a-1})\left[(N_{a-1}-L_{a-1,t-1})+\delta_{a}^{L}L_{a-1,t-1}\right] & \text{if }a<\#_{work}\\
0 & \text{if }a\geq\#_{work}
\end{cases}\label{eq:S_a}\\
\underline{L}_{a,t} & =\begin{cases}
0 & \text{if }a=0\\
(1-\zeta_{a-1})(1-\delta_{a}^{L})L_{a-1,t-1} & \text{if }a<\#_{work}\\
0 & \text{if }a\geq\#_{work}
\end{cases}\label{eq:Lubar_a}\\
S_{t} & =\sum_{a=0}^{\#-1}S_{a,t}.\label{eq:S}\\
\underline{L}_{t} & =\sum_{a=0}^{\#-1}\underline{L}_{a,t}.\label{eq:L_ubar}\\
\delta_{t}^{L} & =\frac{L_{t-1}-\underline{L}_{t}}{L_{t-1}}\label{eq:delta_L}\\
\mathbb{\mathcal{M}}_{t} & =L_{t}-\underline{L}_{t}\label{eq:curlyM}\\
m_{t}^{s} & =\frac{\mathcal{M}_{t}}{S_{t}}\nonumber \\
v_{t} & =\frac{1}{\nu}\left(\frac{\left(m_{t}^{s}\right)^{\frac{1}{\sigma^{m}}}S_{t}^{\frac{1}{\sigma^{m}}}}{1-\left(m_{t}^{s}\right)^{\frac{1}{\sigma^{m}}}}\right)^{\sigma^{m}}\label{eq:v}\\
m_{t}^{v} & =\frac{\mathbb{\mathcal{M}}_{t}}{v_{t}}\label{eq:m_v}\\
L_{a,t} & =\underline{L}_{a,t}+m_{t}^{s}S_{a,t}.\label{eq:L_a}\\
U_{a,t} & =\begin{cases}
N_{a}-L_{a,t} & \text{if }a<\#_{\text{work}}\\
0 & \text{if }a\geq\#_{\text{work}}
\end{cases}\label{eq:U_a}\\
U_{t} & =\sum_{a=0}^{\#-1}U_{a,t}.\label{eq:U}
\end{align}

\end_inset


\end_layout

\end_deeper
\begin_layout Standard
For 
\begin_inset Formula $t=0$
\end_inset

, the variable 
\begin_inset Formula $L_{a-1,t-1}$
\end_inset

 is pre-determined.
\end_layout

\begin_layout Subsection
Block II.
 Labor agency
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-II.-Labor"

\end_inset


\end_layout

\begin_layout Standard
The labor agency firms post vacancies, 
\begin_inset Formula $v_{t}$
\end_inset

, to hire labor 
\begin_inset Formula $L_{t}$
\end_inset

.
 The cost of each vacancy is 
\begin_inset Formula $\kappa^{L}$
\end_inset

 in units of labor.
 The firms can therefore rent out 
\begin_inset Formula $\ell_{t}=L_{t}-\kappa^{L}v_{t}$
\end_inset

 units of labor to the production firms at the rental price 
\begin_inset Formula $r_{t}^{\ell}$
\end_inset

.
 
\end_layout

\begin_layout Standard
Labor follows the law-of-motion 
\begin_inset Formula $L_{t}=\left(1-\delta_{t}^{L}\right)L_{t-1}+m_{t}^{v}v_{t}$
\end_inset

, and the wage, 
\begin_inset Formula $W_{t}$
\end_inset

, is determined by bargaining.
 Matching occurs according to the matching function, and the firms take
 the separation rate, 
\begin_inset Formula $\delta_{t}^{L}$
\end_inset

, and the vacancy filling rate, 
\begin_inset Formula $m_{t}^{v}$
\end_inset

 as given.
 Since lagged employment, 
\begin_inset Formula $L_{t-1}$
\end_inset

, is pre-determined, we consider 
\begin_inset Formula $L_{t}$
\end_inset

 to be the choice value and derive the required number of vacancies, 
\begin_inset Formula $v_{t}$
\end_inset

, and the implied labor for rent, 
\begin_inset Formula $\ell_{t}$
\end_inset

.
\end_layout

\begin_layout Standard
The labor agency problem then is:
\begin_inset Formula 
\begin{align*}
V_{0}(L_{t-1})=\max_{\left\{ L_{t}\right\} }\sum_{t=0}^{\infty} & \left(1+r^{\text{firm}}\right)^{-t}\left[r_{t}^{\ell}\ell_{t}-W_{t}L_{t}\right]\\
 & \text{s.t.}\\
v_{t} & =\frac{L_{t}-\left(1-\delta_{t}^{L}\right)L_{t-1}}{m_{t}^{v}}\\
\ell_{t} & =L_{t}-\kappa^{L}v_{t}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
V_{0}(L_{t-1}) & =\max_{\left\{ L_{t}\right\} }\sum_{t=0}^{\infty}\left(1+r^{\text{firm}}\right)^{-t}\left[r_{t}^{\ell}\ell(L_{t},L_{t-1})-w_{t}L_{t}\right]\\
 & \text{s.t.}\\
\ell(L_{t},L_{t-1}) & =L_{t}-\frac{\kappa^{L}}{m_{t}^{v}}\left[L_{t}-\left(1-\delta_{t}^{L}\right)L_{t-1}\right]
\end{align*}

\end_inset


\begin_inset Formula 
\begin{align*}
\frac{\partial V_{0}}{\partial L_{t}} & =0\Leftrightarrow\\
\left(1+r^{\text{firm}}\right)^{-t}\left[r_{t}^{\ell}\frac{\partial\ell_{t}}{\partial L_{t}}-W_{t}\right]+\left(1+r^{\text{firm}}\right)^{-(t+1)}r_{t+1}^{\ell}\frac{\partial\ell_{t+1}}{\partial L_{t}} & =0\Leftrightarrow\\
\left[r_{t}^{\ell}\frac{\partial\ell_{t}}{\partial L_{t}}-w_{t}\right]+\left(1+r^{\text{firm}}\right)^{-1}r_{t+1}^{\ell}\frac{\partial\ell_{t+1}}{\partial L_{t}} & =0\Leftrightarrow\\
r_{t}^{\ell} & =\frac{w_{t}-(1+r^{\text{firm}})^{-1}r_{t+1}^{\ell}\frac{\partial\ell_{t+1}}{\partial L_{t}}}{\frac{\partial\ell_{t}}{\partial L_{t}}}\\
 & =\frac{1}{1-\frac{\kappa^{L}}{m_{t}^{v}}}\left[w_{t}-r_{t+1}^{\ell}\frac{1-\delta_{t+1}^{L}}{1+r^{\text{firm}}}\frac{\kappa^{L}}{m_{t+1}^{v}}\right]
\end{align*}

\end_inset


\end_layout

\end_inset

Using the FOC to 
\begin_inset Formula $L_{t}$
\end_inset

 from the labor agency problem, we write the 
\series bold
block
\series default
 as:
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\begin_inset Formula $\{W_{t}\}$
\end_inset


\series default
, 
\begin_inset Formula $\left\{ m_{t}^{v}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \delta_{t}^{L}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ L_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ v_{t}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs:
\series default
 
\begin_inset Formula $\left\{ r_{t}^{\ell}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \ell_{t}\right\} $
\end_inset


\begin_inset Formula 
\begin{align}
r_{t}^{\ell} & =\frac{1}{1-\frac{\kappa^{L}}{m_{t}^{v}}}\left[W_{t}-r_{t+1}^{\ell}\frac{1-\delta_{t+1}^{L}}{1+r^{\text{firm}}}\frac{\kappa^{L}}{m_{t+1}^{v}}\right]\label{eq:w_ell}\\
\ell_{t} & =L_{t}-\kappa^{L}v_{t}.\label{eq:ell}
\end{align}

\end_inset


\begin_inset Note Note
status open

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
r_{ss}^{\ell} & =\frac{1}{1-\frac{\kappa^{L}}{m_{ss}^{v}}}\left[W_{ss}-r_{ss}^{\ell}\frac{1-\delta_{ss}^{L}}{1+r^{\text{firm}}}\frac{\kappa^{L}}{m_{ss}^{v}}\right]\Leftrightarrow\\
\left(1-\frac{\kappa^{L}}{m_{ss}^{v}}+\frac{1-\delta_{ss}^{L}}{1+r^{\text{firm}}}\frac{\kappa^{L}}{m_{ss}^{v}}\right)r_{ss}^{\ell} & =W_{ss}\Leftrightarrow\\
r_{ss}^{\ell} & =\frac{W_{ss}}{\left(1-\frac{\kappa^{L}}{m_{ss}^{v}}+\frac{1-\delta_{ss}^{L}}{1+r^{\text{firm}}}\frac{\kappa^{L}}{m_{ss}^{v}}\right)}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
The variable 
\begin_inset Formula $L_{-1}$
\end_inset

 is pre-determined.
\end_layout

\begin_layout Subsection
Block III.
 Production firms
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-III.-Production"

\end_inset


\end_layout

\begin_layout Standard
The production firms use capital, 
\begin_inset Formula $K_{t-1}$
\end_inset

, and labor, 
\begin_inset Formula $\ell_{t}$
\end_inset

, to produce output, 
\begin_inset Formula $Y_{t}$
\end_inset

, with a CES technology.
 The rental price of capital is 
\begin_inset Formula $r_{t}^{K}$
\end_inset

 and the rental price of labor is 
\begin_inset Formula $r_{t}^{\ell}$
\end_inset

.
 The firms are price takers in all markets and free entry implies zero profits.
\end_layout

\begin_layout Standard
Using the results with CES technology derived in sub-section 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:On-CES-technology"
plural "false"
caps "false"
noprefix "false"

\end_inset

, we write the 
\series bold
block
\series default
 as:
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\begin_inset Formula $\left\{ K_{t}\right\} ,\left\{ \ell_{t}\right\} $
\end_inset


\series default
, 
\begin_inset Formula $\left\{ r_{t}^{K}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ r_{t}^{\ell}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs: 
\begin_inset Formula $\left\{ Y_{t}\right\} $
\end_inset


\series default
, 
\begin_inset Formula $\left\{ P_{t}^{Y,0}\right\} $
\end_inset


\series bold

\begin_inset Formula 
\begin{align}
Y_{t} & =\Gamma\left(\left(\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}K_{t-1}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}+\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}\right)^{\frac{\sigma^{Y}}{\sigma^{Y}-1}}\label{eq:Y}\\
P_{t}^{Y,0} & =\frac{1}{\Gamma}\left(\mu^{K}\left(r_{t}^{K}\right)^{1-\sigma^{Y}}+\left(1-\mu^{K}\right)\left(r_{t}^{\ell}\right)^{1-\sigma^{Y}}\right)^{\frac{1}{1-\sigma^{Y}}}.\label{eq:PY}
\end{align}

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Targets:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\frac{K_{t-1}}{\ell_{t}} & =\frac{\mu_{K}}{1-\mu_{K}}\left(\frac{r_{t}^{\ell}}{r_{t}^{K}}\right)^{\sigma^{Y}}.\label{eq:FOC_K_ell}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The variable 
\begin_inset Formula $K_{-1}$
\end_inset

 is pre-determined.
\end_layout

\begin_layout Subsection
Block IV.
 Phillips Curve
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-IV.-Phillips"

\end_inset


\end_layout

\begin_layout Standard
The final price, 
\begin_inset Formula $P_{t}^{Y}$
\end_inset

, is a mark-up over the marginal cost price, 
\begin_inset Formula $P_{t}^{Y,0}$
\end_inset

, to capture monopolitic behavior by the firms.
 The demand for each good is 
\begin_inset Formula $y_{t}$
\end_inset

.
 The final prices are sticky, and the firms pay a quadratic adjustment cost,
 
\begin_inset Formula $g_{t}$
\end_inset

, to change them.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
V_{t}=\max_{\left\{ p_{t}^{Y}\right\} } & \left(p_{t}^{Y}-P_{t}^{Y,0}\right)y_{t}-g_{t}+\frac{1}{1+r^{\text{firm}}}V_{t+1}\\
 & \text{s.t.}\\
g_{t} & =\frac{\gamma}{2}\left[\frac{p_{t}^{Y}/p_{t-1}^{Y}}{p_{t-1}^{Y}/p_{t-2}^{Y}}-1\right]^{2}P_{t}^{Y}Y_{t}\\
y_{t} & =\left(\frac{p_{t}^{Y}}{P_{t}^{Y}}\right)^{-\sigma_{D}}Y_{t}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula 
\begin{align*}
\frac{p_{t}^{Y}}{y_{t}}\frac{\partial(p_{t}^{Y}y_{t})}{\partial p_{t}^{y}} & =\frac{p_{t}^{Y}}{y_{t}}\left(y_{t}+\frac{\partial y_{t}}{\partial p_{t}^{Y}}p_{t}^{Y}\right)=\frac{p_{t}^{Y}}{y_{t}}\left(y_{t}-\sigma_{D}\left(\frac{p_{t}^{Y}}{P_{t}^{Y}}\right)^{-\eta-1}\frac{Y_{t}}{P_{t}^{Y}}p_{t}^{Y}\right)=p_{t}^{Y}\left(1-\sigma_{D}\right)\\
\frac{\partial V_{t}}{\partial p_{t}^{Y}} & =y_{t}+\frac{\partial y_{t}}{\partial p_{t}^{Y}}p_{t}^{Y}-P_{t}^{Y,0}\frac{\partial y_{t}}{\partial p_{t}^{Y}}-\frac{\partial g_{t}}{\partial p_{t}^{Y}}+\frac{1}{1+r^{\text{firm}}}\frac{\partial{}_{t+1}}{\partial p_{t}^{Y}}=0\\
0 & =\left(y_{t}+p_{t}^{Y}\frac{\partial y_{t}}{\partial p_{t}^{Y}}\right)\frac{p_{t}^{Y}}{y_{t}}-P_{t}^{Y,0}\frac{\partial y_{t}}{\partial p_{t}^{Y}}\frac{p_{t}^{Y}}{y_{t}}-\frac{p_{t}^{Y}}{y_{t}}\left(\frac{\partial g_{t}}{\partial p_{t}^{Y}}+\frac{1}{1+r^{\text{firm}}}\frac{\partial g_{t+1}}{\partial p_{t}^{Y}}\right)\\
0 & =p_{t}^{Y}\left(1-\sigma_{D}\right)+\sigma_{D}P_{t}^{Y,0}-\frac{p_{t}^{Y}}{y_{t}}\left(\frac{\partial g_{t}}{\partial p_{t}^{Y}}+\frac{1}{1+r^{\text{firm}}}\frac{\partial g_{t+1}}{\partial p_{t}^{Y}}\right)\\
p_{t}^{Y} & =\frac{\sigma_{D}}{\sigma_{D}-1}P_{t}^{Y,0}-\frac{1}{\sigma_{D}-1}\frac{p_{t}^{Y}}{y_{t}}\left(\frac{\partial g_{t}}{\partial p_{t}^{Y}}+\frac{1}{1+r^{\text{firm}}}\frac{\partial g_{t+1}}{\partial p_{t}^{Y}}\right)
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Standard
Using the first order condition we get
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\begin_inset Formula $\left\{ Y_{t}\right\} ,\left\{ P_{t}^{Y,0}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs: 
\begin_inset Formula $\left\{ P_{t}^{Y}\right\} $
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
p_{t}^{Y} & =\frac{\sigma_{D}}{\sigma_{D}-1}P_{t}^{Y,0}-\frac{1}{\sigma_{D}-1}\frac{p_{t}^{Y}}{y_{t}}\left(\frac{\partial g_{t}}{\partial p_{t}^{Y}}+\frac{1}{1+r^{\text{firm}}}\frac{\partial g_{t+1}}{\partial p_{t}^{Y}}\right)\\
p_{t}^{Y} & =\frac{\sigma_{D}}{\sigma_{D}-1}P_{t}^{Y,0}-\frac{1}{\sigma_{D}-1}\frac{p_{t}^{Y}}{y_{t}}\left(\gamma\left[\frac{p_{t}^{Y}/p_{t-1}^{Y}}{p_{t-1}^{Y}/p_{t-2}^{Y}}-1\right]\left(\frac{1/p_{t-1}^{Y}}{p_{t-1}^{Y}/p_{t-2}^{Y}}\right)P_{t}^{Y}Y_{t}+\frac{1}{1+r^{\text{firm}}}\gamma\left[\frac{p_{t+1}^{Y}/p_{t}^{Y}}{p_{t}^{Y}/p_{t-1}^{Y}}-1\right]2\left(\frac{p_{t+1}^{Y}/p_{t-1}^{Y}}{p_{t-1}^{Y}/p_{t-2}^{Y}}\right)P_{t+1}^{Y}Y_{t+1}\right)\\
P_{t}^{Y} & =\frac{\sigma_{D}}{\sigma_{D}-1}P_{t}^{Y,0}-\frac{1}{\sigma_{D}-1}\left(\gamma\left[\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}-1\right]\left(\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}\right)P_{t}^{Y}+\frac{2}{1+r^{\text{firm}}}\gamma\left[\frac{P_{t+1}^{Y}/P_{t}^{Y}}{P_{t}^{Y}/P_{t-1}^{Y}}-1\right]\left(\frac{P_{t+1}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}\right)P_{t+1}^{Y}\frac{Y_{t+1}}{Y_{t}}\right)\\
P_{t}^{Y} & =(1+\theta)P_{t}^{Y,0}-\eta\left(\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}-1\right)\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}P_{t}^{Y}+\frac{2}{1+r^{\text{firm}}}\eta\frac{Y_{t+1}}{Y_{t}}\left(\frac{P_{t+1}^{Y}/P_{t}^{Y}}{P_{t}^{Y}/P_{t-1}^{Y}}-1\right)\frac{P_{t+1}^{Y}/P_{t}^{Y}}{P_{t}^{Y}/P_{t-1}^{Y}}P_{t+1}^{Y}\\
\text{where} & \theta=\frac{1}{\sigma_{D}-1}\wedge\eta=\theta\gamma
\end{align*}

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Targets:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
P_{t}^{Y} & =(1+\theta)P_{t}^{Y,0}-\eta\left(\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}-1\right)\frac{P_{t}^{Y}/P_{t-1}^{Y}}{P_{t-1}^{Y}/P_{t-2}^{Y}}P_{t}^{Y}+\frac{2}{1+r^{\text{firm}}}\eta\frac{Y_{t+1}}{Y_{t}}\left(\frac{P_{t+1}^{Y}/P_{t}^{Y}}{P_{t}^{Y}/P_{t-1}^{Y}}-1\right)\frac{P_{t+1}^{Y}/P_{t}^{Y}}{P_{t}^{Y}/P_{t-1}^{Y}}P_{t+1}^{Y}\label{eq:Phillips}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection
Block V.
 Bargaining
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-V.-Bargaining"

\end_inset


\end_layout

\begin_layout Standard
The target wage, 
\begin_inset Formula $W_{t}^{*}$
\end_inset

, in the bargaining is specified ad hoc as a weighted average of the profit
 the firms get from a marginal unit of labor, 
\begin_inset Formula $\overline{W}_{t}$
\end_inset

, and the worker's outside option,
\begin_inset Formula $\underline{W}_{t}$
\end_inset

.
 The bargained wage, 
\begin_inset Formula $W_{t}$
\end_inset

, is again a weighted average of the past wage and the current target wage
 to create a real rigidity.
\end_layout

\begin_layout Itemize

\series bold
Inputs: 
\series default

\begin_inset Formula $\left\{ W_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ Y_{t}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \ell_{t}\right\} $
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs: 
\begin_inset Formula $\{\overline{W}_{t},\underline{W}_{t},W_{t}^{\ast}\}$
\end_inset


\begin_inset Formula 
\begin{align}
\overline{W}_{t} & =P_{t}^{Y}\left(\left(1-\mu_{K}\right)\Gamma^{\sigma^{Y}-1}\frac{Y_{t}}{\ell_{t}}\right)^{\frac{1}{\sigma^{Y}}}\label{eq:MPL}\\
\underline{W}_{t} & =W^{U}\label{eq: Outside_option}\\
W_{t}^{\ast} & =\psi\overline{W}_{t}+(1-\psi)\underline{W}_{t}\label{eq:w_ast}
\end{align}

\end_inset


\begin_inset Note Note
status collapsed

\begin_layout Plain Layout

\series bold
\begin_inset Formula 
\begin{align*}
\frac{\partial Y_{t}}{\partial\ell_{t}} & =\Gamma\left(\left(\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}K_{t-1}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}+\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}\right)^{\frac{\sigma^{Y}}{\sigma^{Y}-1}-1}\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}-1}=\overline{W}_{t}\\
\overline{W}_{t} & =\Gamma^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}\Gamma^{\frac{1}{\sigma^{Y}}}\left(\left(\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}K_{t-1}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}+\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}\right)^{\frac{1}{\sigma^{Y}-1}}\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{-1}{\sigma^{Y}}}\\
\Leftrightarrow\overline{W}_{t} & =\Gamma^{\frac{\sigma^{Y}-1}{\sigma^{Y}}}Y_{t}^{\frac{1}{\sigma^{Y}}}\left(1-\mu^{K}\right)^{\frac{1}{\sigma^{Y}}}\ell_{t}^{\frac{-1}{\sigma^{Y}}}\\
\overline{W}_{t} & =\left(\left(1-\mu_{K}\right)\Gamma^{\sigma^{Y}-1}\frac{Y_{t}}{\ell_{t}}\right)^{\frac{1}{\sigma^{Y}}}
\end{align*}

\end_inset


\end_layout

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Targets:
\begin_inset Formula 
\begin{equation}
W_{t}=\gamma^{w}W_{t-1}+(1-\gamma^{w})W_{t}^{\ast}\label{eq:w}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Block VI.
 Repacking firms - prices
\begin_inset CommandInset label
LatexCommand label
name "subsec:Block-VI.-Repacking"

\end_inset


\end_layout

\begin_layout Standard
The output good, 
\begin_inset Formula $Y_{t}$
\end_inset

, can be used for either private consumption, 
\begin_inset Formula $C_{t}$
\end_inset

, public consumption, 
\begin_inset Formula $G_{t}$
\end_inset

, investment, 
\begin_inset Formula $I_{t}$
\end_inset

, or exports, 
\begin_inset Formula $X_{t}$
\end_inset

.
 For each use the output good must be repacked with imported goods.
 This is done by repacking firms with a CES production technology.
\end_layout

\begin_layout Standard
Using the results with CES technology derived in sub-section 
\begin_inset CommandInset ref
LatexCommand ref
reference "subsec:On-CES-technology"
plural "false"
caps "false"
noprefix "false"

\end_inset

 with 
\begin_inset Formula $\Gamma=1$
\end_inset

, we write the 
\series bold
block
\series default
 for the pricing part of this as:
\end_layout

\begin_layout Enumerate

\series bold
Inputs:
\series default
 
\begin_inset Formula $\left\{ P_{t}^{Y}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ P_{t}^{M,\bullet}\right\} $
\end_inset

 for 
\begin_inset Formula $\bullet\in\{C,G,I,X\}$
\end_inset


\end_layout

\begin_layout Enumerate

\series bold
Output:
\series default
 
\begin_inset Formula $\left\{ P_{t}^{\bullet}\right\} $
\end_inset

 for 
\begin_inset Formula $\bullet\in\{C,G,I,X\}$
\end_inset


\begin_inset Formula 
\begin{equation}
P_{t}^{\bullet}=\left(\mu^{M,\bullet}\left(P_{t}^{M,\bullet}\right)^{1-\sigma^{\bullet}}+\left(1-\mu^{M,\bullet}\right)\left(P_{t}^{Y}\right)^{1-\sigma^{\bullet}}\right)^{\frac{1}{1-\sigma^{\bullet}}}.\label{eq:CGIX_P}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
