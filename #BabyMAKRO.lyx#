name "subsec:Block-XII.-Goods"

\end_inset


\end_layout

\begin_layout Standard
The production of the domestic output good must match the above output goods
 used by the repacking firms.
 Imports, 
\begin_inset Formula $M_{t}$
\end_inset

, are the sum of the imports used by the repacking firms.
\end_layout

\begin_layout Standard
We write the 
\series bold
block
\series default
 as:
\end_layout

\begin_layout Itemize

\series bold
Inputs:
\series default
 
\begin_inset Formula $\left\{ \bullet_{t}^{Y}\right\} $
\end_inset

, 
\begin_inset Formula $\left\{ \bullet_{t}^{M}\right\} $
\end_inset

 for 
\begin_inset Formula $\bullet\in\{C,G,I,X\}$
\end_inset


\end_layout

\begin_layout Itemize

\series bold
Outputs:
\series default
 
\begin_inset Formula $\left\{ M_{t}\right\} $
\end_inset


\begin_inset Formula 
\begin{equation}
M_{t}=\sum_{\bullet\in\{C,G,I,X\}}\bullet_{t}^{M}.\label{eq:M}
\end{equation}

\end_inset


\end_layout

\begin_layout Itemize

\series bold
Targets:
\series default

\begin_inset Formula 
\begin{align}
Y_{t} & =\sum_{\bullet\in\{C,G,I,X\}}\bullet_{t}^{Y}.\label{eq:Y_clearing}
\end{align}

\end_inset


\end_layout

