\begin_deeper
\begin_layout Itemize
The government pays an interest rate, 
\begin_inset Formula $r^{B},$
\end_inset

 on its debt which is determined in the foreign economy.
 Furthermore, it pays a fraction of the steady state wage as unemployment
 and retirement benefits, and it receives a tax revenue from labor taxes.
 The government consumption is denoted 
\begin_inset Formula $G_{t}$
\end_inset

.
 
\begin_inset Formula 
\[
B_{t}=(1+r^{B})B_{t-1}+P_{t}^{G}G_{t}+(1-\tau_{t})\left(W_{U}W_{ss}U_{t}+W_{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }\right)-\tau_{t}W_{t}L_{t}.
\]

\end_inset


\end_layout

\begin_layout Itemize
We assume the government gradually adjusts taxes to get back to steady state
 debt:
\begin_inset Formula 
\begin{align*}
\tau_{t} & =\tau_{ss}+\varepsilon_{B}\frac{\tilde{B}_{t}-B_{ss}}{W_{t}L_{t}+W_{U}W_{ss}U_{t}+W_{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }},
\end{align*}

\end_inset

where 
\begin_inset Formula 
\begin{align*}
\tilde{B}_{t} & =(1+r^{B})B_{t-1}+P_{t}^{G}G_{t}+(1-\tau_{ss})\left(W_{U}W_{ss}U_{t}+W_{R}W_{ss}1_{\left\{ a\geq\#_{\text{work}}\right\} }\right)\\
 & -\tau_{ss}W_{t}L_{t}.
\end{align*}

\end_inset


\end_layout

\end_deeper
