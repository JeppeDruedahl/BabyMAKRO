\begin_layout Standard
Households search for a job and supply labor exogenously.
 The age-specific job-separation probability is 
\begin_inset Formula $\delta_{a}^{L}\in(0,1)$
\end_inset

.
 All unemployed search for a job.
 As an initial condition, we have 
\begin_inset Formula $L_{-1,t-1}=0$
\end_inset

.
\end_layout

\begin_layout Standard
The quantity of searchers is
\begin_inset Formula 
\begin{align*}
S_{a,t} & =\begin{cases}
1 & \text{if }a=0\\
(1-\zeta_{a-1})\left[(N_{a-1}-L_{a-1,t-1})+\delta_{a}^{L}L_{a-1,t-1}\right] & \text{if }a<\#_{\text{work}}\\
0 & \text{if }a\geq\#_{\text{work}}
\end{cases}\\
S_{t} & =\sum_{a}S_{a,t}.
\end{align*}

\end_inset

The quantity of households with a job 
\emph on
before matching
\emph default
 is
\begin_inset Formula 
\begin{align*}
\underline{L}_{a,t} & =\begin{cases}
0 & \text{if }a=0\\
(1-\zeta_{a-1})(1-\delta_{a}^{L})L_{a-1,t-1} & \text{if }a<\#_{\text{work}}\\
0 & \text{if }a\geq\#_{\text{work}}
\end{cases}\\
\underline{L}_{t} & =\sum_{a}\underline{L}_{a,t}.
\end{align*}

\end_inset

The aggregate job-separation rate incl.
 mortality is
\begin_inset Formula 
\[
\delta_{t}^{L}=\frac{L_{t-1}-\underline{L}_{t}}{L_{t-1}}.
\]

\end_inset

The quantity of vacancies is 
\begin_inset Formula $v_{t}$
\end_inset

 and the number of matches, 
\begin_inset Formula $\mathbb{\mathcal{M}}_{t}$
\end_inset

, is given by the 
\emph on
matching function
\emph default

\begin_inset Note Note
status collapsed

\begin_layout Plain Layout
\begin_inset Formula $\mathbb{\mathcal{M}}_{t}=\frac{S_{t}v_{t}}{\left(S_{t}^{\frac{1}{\sigma^{m}}}+v_{t}^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}}\Leftrightarrow\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\left(S_{t}^{\frac{1}{\sigma^{m}}}+v_{t}^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}=v_{t}\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}=\left(\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\right)^{\frac{1}{\sigma^{m}}}\left(S_{t}^{\frac{1}{\sigma^{m}}}+v_{t}^{\frac{1}{\sigma^{m}}}\right)\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}-\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}^{\frac{1}{\sigma^{m}}}v_{t}^{\frac{1}{\sigma^{m}}}=\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}\Leftrightarrow v_{t}^{\frac{1}{\sigma^{m}}}=\frac{\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}}{1-\left(\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\right)^{\frac{1}{\sigma^{m}}}}\Leftrightarrow v_{t}=\left(\frac{\mathbb{\mathcal{M}}_{t}^{\frac{1}{\sigma^{m}}}}{1-\left(\frac{\mathbb{\mathcal{M}}_{t}}{S_{t}}\right)^{\frac{1}{\sigma^{m}}}}\right)^{\sigma^{m}}$
\end_inset


\end_layout

\end_inset


\begin_inset Formula 
\[
\mathcal{M}_{t}=\frac{S_{t}v_{t}}{\left(S_{t}^{\frac{1}{\sigma^{m}}}+v_{t}^{\frac{1}{\sigma^{m}}}\right)^{\sigma^{m}}}.
\]

\end_inset


\end_layout

\begin_layout Standard
The job-filling rate, 
\begin_inset Formula $m_{t}^{v}$
\end_inset

, and the job-finding rate, 
\begin_inset Formula $m_{t}^{s}$
\end_inset

, are thus
\begin_inset Formula 
\begin{align*}
m_{t}^{v} & =\frac{\mathbb{\mathcal{M}}_{t}}{v_{t}}\\
m_{t}^{s} & =\frac{\mathcal{M}_{t}}{S_{t}}.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
The number of employed therefore is
\begin_inset Formula 
\begin{align*}
L_{a,t} & =\underline{L}_{a,t}+m_{t}^{s}S_{a,t}.
\end{align*}

\end_inset

This implies that the number of unemployed is
\begin_inset Formula 
\begin{align*}
U_{a,t} & =\begin{cases}
N_{a}-L_{a,t} & \text{if }a<\#_{\text{work}}\\
0 & \text{if }a\geq\#_{\text{work}}
\end{cases}.
\end{align*}

\end_inset

In equilibrium, the number of matches must equal the number of new hires,
 i.e.
\begin_inset Formula 
\[
\mathcal{M}_{t}=L_{t}-\underline{L}_{t}.
\]

\end_inset

