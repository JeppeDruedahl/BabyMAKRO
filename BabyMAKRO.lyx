\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
The exogenous labor supply and search-and-matching implies
\begin_inset Formula 
\begin{align*}
S_{a,ss} & =\begin{cases}
1 & \text{if }a=0\\
1-L_{a-1,ss}+\delta_{a}^{L}L_{a-1,ss} & \text{if }a<A_{R}\\
0 & \text{else}
\end{cases}\\
\underline{L}_{a,ss} & =\begin{cases}
0 & \text{if }a=0\\
(1-\delta_{a}^{L})L_{a-1,ss} & \text{if }a<A_{R}\\
0 & \text{else}
\end{cases}\\
L_{a,ss} & =\underline{L}_{a,ss}+m_{ss}^{s}S_{a,ss}\\
L_{ss} & =\sum_{a}L_{a,ss}\\
S_{ss} & =\sum_{a}S_{a,ss}\\
\delta_{ss}^{L} & =\frac{L_{ss}-\underline{L}_{t}}{L_{ss}}\\
\mathbb{\mathcal{M}}_{ss} & =\delta_{ss}^{L}L_{ss}\\
v_{ss} & =\frac{m_{ss}^{s}S_{ss}}{\left(1-\left(m_{ss}^{s}\right)^{\frac{1}{\sigma_{m}}}\right)^{\sigma_{m}}}\\
m_{ss}^{v} & =\frac{\mathbb{\mathcal{M}}_{ss}}{v_{ss}}
\end{align*}

\end_inset


\end_layout

\begin_layout Enumerate
Capital agency behavior implies
\begin_inset Formula 
\[
r_{ss}^{K}=r^{\text{firm}}+\delta^{K}
\]

\end_inset


\end_layout

\begin_layout Enumerate
